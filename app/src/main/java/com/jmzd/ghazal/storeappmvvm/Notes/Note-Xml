        app:layout_constraintBottom_toBottomOf="@id/avatarImg"
        app:layout_constraintEnd_toEndOf="@id/avatarImg"
        app:layout_constraintStart_toStartOf="@id/avatarImg"
        app:layout_constraintTop_toTopOf="@id/avatarImg" />

