<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoreAppMvvm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/eerieBlack</item>
        <!-- Customize your theme here. -->
    </style>
    <!--Bottom navigation font-->
    <style name="BottomNavigationViewFont" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_8font_mdp</item>
        <item name="fontFamily">@font/iransans</item>
    </style>
    <style name="BottomNavigationViewFont.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_8font_mdp</item>
        <item name="fontFamily">@font/iransans_bold</item>
    </style>

    <!--Colored shadows-->
    <style name="ColoredShadowDark">
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/royalBlue</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/royalBlue</item>
    </style>

    <style name="ColoredShadowLight">
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/cornflowerBlue</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/cornflowerBlue</item>
    </style>
    <!--Shaped images-->
    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--ProgressBar-->
    <style name="DarkProgressbar">
        <item name="colorAccent">@color/darkStrategy</item>
    </style>

    <style name="SalmonProgressbar">
        <item name="colorAccent">@color/salmon</item>
    </style>

    <!--Bottom sheet dialog-->
    <style name="RemoveDialogBackground" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <!--Range Slider-->
    <style name="MyRangeStyle" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/BlueSlider</item>
        <item name="labelStyle">@style/Widget.Tooltip</item>
    </style>
    <style name="BlueSlider">
        <item name="colorPrimary">@color/dodgerBlue</item>
        <item name="colorOnPrimary">@color/lavender</item>
    </style>

    <style name="Widget.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/dodgerBlue</item>
        <item name="backgroundColor">@color/dodgerBlue</item>
        <item name="background">@color/dodgerBlue</item>
        <item name="android:textAppearance">@style/TextAppearance.Tooltip</item>
    </style>

    <style name="TextAppearance.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/iransans</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>

    <!--Chips-->
    <style name="FilterChipsBackground" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/item_chip_background</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="FilterChipsText">
        <item name="fontFamily">@font/iransans</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textSize">@dimen/_9font_mdp</item>
        <item name="android:textColor">@color/item_chip_text</item>
    </style>


</resources>